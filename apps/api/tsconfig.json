{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "preserveSymlinks": true
  },

  "exclude": ["dist", "build", "node_modules", "*.old"]
}
